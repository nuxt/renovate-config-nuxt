{
  "description": "Default config for Nuxt repositories",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "meteor": {
    "enabled": false
  },
  "rangeStrategy": "bump",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  },
  "packageRules": [
    {
      "groupName": "nuxt framework",
      "groupSlug": "nuxt",
      "matchPackageNames": [
        "nuxt",
        "nuxt3",
        "nuxt-nightly",
        "nuxi",
        "nuxi-nightly"
      ],
      "matchPackagePrefixes": ["@nuxt", "@nuxtjs"]
    }
  ]
}
